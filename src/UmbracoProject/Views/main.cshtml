@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
    var logo = Model.Value<IPublishedContent>("logo");

}
<!DOCTYPE html>
<html lang="en">
<head>

    @await Html.PartialAsync("metaData")

    <!-- Canonical Link -->
    <link rel="canonical" href="/" />

    <!-- Theme CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/theme.css" type="text/css" media="all">

    <!-- Favicon -->
    <link rel="shortcut icon" href="@logo.Url()" type="image/x-icon">
    <link rel="icon" href="@logo.Url()" type="image/x-icon">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
    <!-- Cookie Consent -->
    <!-- Custom Head Tags -->
    <script>
    function showSidebarContent() {
    // Get the offcanvas element
    const offcanvas = document.getElementById('offcanvasNavbar');
    
    // Add the 'show' class and additional attributes
    offcanvas.classList.add('show');
    offcanvas.style.visibility = 'visible';
    offcanvas.setAttribute('aria-modal', 'true');
    offcanvas.setAttribute('role', 'dialog');
    }
    function unshowSidebarContent() {
    // Get the offcanvas element
    const offcanvas = document.getElementById('offcanvasNavbar');
    
    // Add the 'show' class and additional attributes
    offcanvas.classList.remove('show');
    offcanvas.style.visibility = '';
    offcanvas.removeAttribute('aria-modal');
    offcanvas.removeAttribute('role');
    }
    </script>


    <!-- Load JavaScript Last -->
    <script>
        window.addEventListener("load", function () {
            const script = document.createElement("script");
            script.src = "/scripts/bootstrap.bundle.min.js";
            document.body.appendChild(script);
        });
    </script>
    <script>
function openRightMenu() {
  document.getElementById("rightMenu").style.display = "block";
}

function closeRightMenu() {
  document.getElementById("rightMenu").style.display = "none";
}
</script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-11021846316"></script> 
    <script> window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', 'AW-11021846316'); </script>
    <script defer src="https://unpkg.com/alpinejs@3.10.4/dist/cdn.min.js"></script>

</head>
<body>
    @await Html.PartialAsync("headerView", Model)
    @RenderBody()
    @await Html.PartialAsync("footerView", Model)
</body>
</html>